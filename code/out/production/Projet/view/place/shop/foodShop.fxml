<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import view.ClickableImage?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="615.0"
            prefWidth="865.0" xmlns="http://javafx.com/javafx/8.0.171"
            fx:controller="controller.place.shop.FoodShopController">
    <ClickableImage fx:id="carnivalIcon" fitHeight="50.0" fitWidth="50.0" layoutX="21.0" layoutY="21.0"
                    onMouseClicked="#goCarnival" pickOnBounds="true" preserveRatio="true"
                    tooltipText="Go to carnival">
        <Image url="@../../design/image/carnival.png"/>
    </ClickableImage>
    <ClickableImage fx:id="appleCandyIcon" fitHeight="100.0" fitWidth="100.0" layoutX="115.0" layoutY="232.0"
                    onMouseClicked="#buyFood" pickOnBounds="true" preserveRatio="true"
                    tooltipText="Buy an apple candy">
        <Image url="@../../design/image/apple_candy.png"/>
    </ClickableImage>
    <ClickableImage fx:id="cottonCandyIcon" fitHeight="100.0" fitWidth="100.0" layoutX="383.0" layoutY="232.0"
                    onMouseClicked="#buyFood" pickOnBounds="true" preserveRatio="true"
                    tooltipText="Buy a cotton candy">
        <Image url="@../../design/image/cotton_candy.png"/>
    </ClickableImage>
    <ClickableImage fx:id="chocolateEclairIcon" fitHeight="100.0" fitWidth="100.0" layoutX="640.0" layoutY="232.0"
                    onMouseClicked="#buyFood" pickOnBounds="true" preserveRatio="true"
                    tooltipText="Buy a chocolate eclair">
        <Image url="@../../design/image/chocolate_eclair.png"/>
    </ClickableImage>
    <Label fx:id="appleCandyPrice" layoutX="115.0" layoutY="364.0" minWidth="100.0" textAlignment="CENTER">
        <font>
            <Font name="Carlito Bold" size="25.0"/>
        </font>
    </Label>
    <Label fx:id="cottonCandyPrice" layoutX="383.0" layoutY="364.0" minWidth="100.0" textAlignment="CENTER">
        <font>
            <Font name="Carlito Bold" size="25.0"/>
        </font>
    </Label>
    <Label fx:id="chocolateEclairPrice" layoutX="640.0" layoutY="364.0" minWidth="100.0" textAlignment="CENTER">
        <font>
            <Font name="Carlito Bold" size="25.0"/>
        </font>
    </Label>
    <Label layoutX="389.0" layoutY="26.0" text="Food Shop">
        <font>
            <Font name="Carlito Bold" size="20.0"/>
        </font>
    </Label>
</AnchorPane>
