<AnchorPane minHeight="800.0" minWidth="1200.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.MainController">
    <TabPane prefHeight="650.0" prefWidth="875.0" tabClosingPolicy="UNAVAILABLE" tabMinWidth="425.0" AnchorPane.leftAnchor="15.0" AnchorPane.topAnchor="15.0">
        <Tab text="Game scene">
            <fx:include fx:id="game" source="game.fxml" />
        </Tab>
        <Tab text="Map scene">
            <AnchorPane style="-fx-border-color: black;">
                <Label layoutX="244.0" layoutY="256.0" text="TODO: Carte du jeu">
                    <font>
                        <Font name="Carlito Bold" size="50.0" />
                    </font>
                </Label>
            </AnchorPane>
        </Tab>
    </TabPane>
    <VBox layoutX="890.0" prefHeight="800.0" prefWidth="100.0" spacing="15.0">
        <HBox prefHeight="100.0" prefWidth="200.0" spacing="50.0" style="-fx-border-color: black;">
            <padding>
                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
            </padding>
            <ImageView fitHeight="50.0" fitWidth="50.0" onMouseClicked="#helpMouseClicked" onMouseEntered="#iconMouseEntered" onMouseExited="#iconMouseExited" pickOnBounds="true" preserveRatio="true">
                <Image url="@image/information.png" />
            </ImageView>
            <ImageView fx:id="soundIcon" fitHeight="50.0" fitWidth="50.0" onMouseClicked="#soundMouseClicked" onMouseEntered="#iconMouseEntered" onMouseExited="#iconMouseExited" pickOnBounds="true" preserveRatio="true">
                <Image url="@image/volume_on.png" />
            </ImageView>
            <ImageView fitHeight="50.0" fitWidth="50.0" onMouseClicked="#quitMouseClicked" onMouseEntered="#iconMouseEntered" onMouseExited="#iconMouseExited" pickOnBounds="true" preserveRatio="true">
                <Image url="@image/quit.png" />
            </ImageView>
            <VBox.margin>
                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
            </VBox.margin>
        </HBox>
        <fx:include fx:id="playerInfo" source="playerInfos.fxml" />
    </VBox>
    <ScrollPane fx:id="scrollPaneDialog" hbarPolicy="NEVER" layoutX="15.0" layoutY="686.0" maxHeight="100.0" minHeight="100.0" minWidth="875.0">
        <Label fx:id="labelDialog" alignment="CENTER" maxHeight="1.7976931348623157E308" minHeight="100.0" minWidth="875.0">
            <font>
                <Font name="Carlito Bold" size="16.0" />
            </font>
            <padding>
                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
            </padding>
        </Label>
    </ScrollPane>
    <ImageView fx:id="downArrowIcon" fitHeight="50.0" fitWidth="50.0" layoutX="815.0" layoutY="740.0" onMouseClicked="#scrollAnimation" onMouseEntered="#iconMouseEntered" onMouseExited="#iconMouseExited" pickOnBounds="true" preserveRatio="true">
        <Image url="@image/down_arrowgif.gif" />
    </ImageView>
</AnchorPane>
