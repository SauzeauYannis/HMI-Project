<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="root" minHeight="800.0" minWidth="1200.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controleur.MainController">
    <TabPane fx:id="centerTabs" prefHeight="650.0" prefWidth="890.0" tabClosingPolicy="UNAVAILABLE">
        <Tab text="Game scene">
            <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                <Label fx:id="todoGame" layoutX="249.0" layoutY="256.0" text="TODO: Zone de jeu">
                    <font>
                        <Font name="Carlito Bold" size="50.0" />
                    </font>
                </Label>
            </AnchorPane>
        </Tab>
        <Tab text="Map scene">
            <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                <Label fx:id="todoMap" layoutX="244.0" layoutY="256.0" text="TODO: Carte du jeu">
                    <font>
                        <Font name="Carlito Bold" size="50.0" />
                    </font>
                </Label>
            </AnchorPane>
        </Tab>
    </TabPane>
    <VBox fx:id="rightVBox" layoutX="890.0" prefHeight="800.0" prefWidth="100.0">
        <HBox prefHeight="100.0" prefWidth="200.0" spacing="50.0">
            <padding>
                <Insets left="30.0" right="30.0" top="30.0" />
            </padding>
            <ImageView fx:id="helpIcon" fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                <Image url="@image/information.png" />
            </ImageView>
            <ImageView fx:id="soundIcon" fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                <Image url="@image/volume_on.png" />
            </ImageView>
            <ImageView fx:id="quitIcon" fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                <Image url="@image/quit.png" />
            </ImageView>
        </HBox>
    </VBox>
    <AnchorPane fx:id="bottomPane" layoutY="650.0" prefHeight="150.0" prefWidth="890.0">
        <Label fx:id="todoText" layoutX="228.0" layoutY="46.0" text="TODO: Zone de texte">
            <font>
                <Font name="Carlito Bold" size="50.0" />
            </font>
        </Label>
    </AnchorPane>
</AnchorPane>
