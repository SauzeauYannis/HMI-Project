<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<HBox xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controleur.PlayerController" layoutX="10.0" layoutY="10.0" prefHeight="700.0" prefWidth="200.0"
      spacing="15.0">
    <padding>
        <Insets bottom="15.0" left="15.0"/>
    </padding>
    <children>
        <VBox prefHeight="200.0" spacing="30.0">
            <children>
                <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@image/padlock.png"/>
                    </image>
                </ImageView>
                <VBox fx:id="progress_bar" alignment="BOTTOM_CENTER" prefHeight="585.0" prefWidth="20.0"
                      style="-fx-border-color: black;">
                    <children>
                        <VBox fx:id="bar" prefHeight="0.0" prefWidth="20.0" style="-fx-background-color: gold;"/>
                    </children>
                </VBox>
            </children>
        </VBox>
        <VBox alignment="CENTER" minWidth="230.0" prefHeight="200.0" prefWidth="230.0" spacing="50.0">
            <padding>
                <Insets right="15.0"/>
            </padding>
            <children>
                <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@image/benjapied.gif"/>
                    </image>
                </ImageView>
                <ProgressBar prefWidth="200.0" progress="1.0"/>
                <GridPane maxWidth="170.0" prefHeight="250.0" style="-fx-border-color: black; -fx-border-radius: 5;">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="93.0" minWidth="60.0" prefWidth="86.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="89.0" minWidth="10.0" prefWidth="82.0"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints maxHeight="82.0" minHeight="75.0" prefHeight="82.0" vgrow="SOMETIMES"/>
                        <RowConstraints maxHeight="82.0" minHeight="75.0" prefHeight="82.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="75.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    </rowConstraints>
                    <children>
                        <AnchorPane maxHeight="75.0" maxWidth="75.0"
                                    style="-fx-border-color: black; -fx-border-radius: 5;" GridPane.halignment="CENTER">
                            <children>
                                <ImageView fitHeight="60.0" fitWidth="60.0" layoutX="8.0" layoutY="8.0" opacity="0.25"
                                           pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@image/key_platinum.png"/>
                                    </image>
                                </ImageView>
                                <Label fx:id="platinumKeyQuantity" alignment="CENTER" layoutX="54.0" layoutY="54.0"
                                       minHeight="19.0" minWidth="19.0"
                                       style="-fx-border-color: black; -fx-border-radius: 5;" text="0">
                                    <font>
                                        <Font name="Carlito Bold" size="14.0"/>
                                    </font>
                                </Label>
                            </children>
                        </AnchorPane>
                        <AnchorPane maxHeight="75.0" maxWidth="75.0"
                                    style="-fx-border-color: black; -fx-border-radius: 5;" GridPane.columnIndex="1"
                                    GridPane.halignment="CENTER">
                            <children>
                                <ImageView fitHeight="60.0" fitWidth="60.0" layoutX="8.0" layoutY="8.0" opacity="0.25"
                                           pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@image/chocolate_eclair.png"/>
                                    </image>
                                </ImageView>
                                <Label fx:id="chocolateEclairQuantity" alignment="CENTER" layoutX="54.0" layoutY="54.0"
                                       minHeight="19.0" minWidth="19.0"
                                       style="-fx-border-color: black; -fx-border-radius: 5;" text="0">
                                    <font>
                                        <Font name="Carlito Bold" size="14.0"/>
                                    </font>
                                </Label>
                            </children>
                        </AnchorPane>
                        <AnchorPane maxHeight="75.0" maxWidth="75.0"
                                    style="-fx-border-color: black; -fx-border-radius: 5;" GridPane.halignment="CENTER"
                                    GridPane.rowIndex="1">
                            <children>
                                <ImageView fitHeight="60.0" fitWidth="60.0" layoutX="8.0" layoutY="8.0" opacity="0.25"
                                           pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@image/key_golden.png"/>
                                    </image>
                                </ImageView>
                                <Label fx:id="goldKeyQuantity" alignment="CENTER" layoutX="54.0" layoutY="54.0"
                                       minHeight="19.0" minWidth="19.0"
                                       style="-fx-border-color: black; -fx-border-radius: 5;" text="0">
                                    <font>
                                        <Font name="Carlito Bold" size="14.0"/>
                                    </font>
                                </Label>
                            </children>
                        </AnchorPane>
                        <AnchorPane maxHeight="75.0" maxWidth="75.0"
                                    style="-fx-border-color: black; -fx-border-radius: 5;" GridPane.columnIndex="1"
                                    GridPane.halignment="CENTER" GridPane.rowIndex="1">
                            <children>
                                <ImageView fitHeight="60.0" fitWidth="60.0" layoutX="8.0" layoutY="8.0" opacity="0.25"
                                           pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@image/cotton-candy.png"/>
                                    </image>
                                </ImageView>
                                <Label fx:id="cottonCandyQuantity" alignment="CENTER" layoutX="54.0" layoutY="54.0"
                                       minHeight="19.0" minWidth="19.0"
                                       style="-fx-border-color: black; -fx-border-radius: 5;" text="0">
                                    <font>
                                        <Font name="Carlito Bold" size="14.0"/>
                                    </font>
                                </Label>
                            </children>
                        </AnchorPane>
                        <AnchorPane maxHeight="75.0" maxWidth="75.0"
                                    style="-fx-border-color: black; -fx-border-radius: 5;" GridPane.halignment="CENTER"
                                    GridPane.rowIndex="2">
                            <children>
                                <ImageView fx:id="copperKeyIcon" fitHeight="60.0" fitWidth="60.0" layoutX="8.0"
                                           layoutY="8.0" opacity="0.25" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@image/key_copper.png"/>
                                    </image>
                                </ImageView>
                                <Label fx:id="copperKeyQuantity" alignment="CENTER" layoutX="54.0" layoutY="54.0"
                                       minHeight="19.0" minWidth="19.0"
                                       style="-fx-border-color: black; -fx-border-radius: 5;" text="0">
                                    <font>
                                        <Font name="Carlito Bold" size="14.0"/>
                                    </font>
                                </Label>
                            </children>
                        </AnchorPane>
                        <AnchorPane maxHeight="75.0" maxWidth="75.0"
                                    style="-fx-border-color: black; -fx-border-radius: 5;" GridPane.columnIndex="1"
                                    GridPane.halignment="CENTER" GridPane.rowIndex="2">
                            <children>
                                <ImageView fitHeight="60.0" fitWidth="60.0" layoutX="8.0" layoutY="8.0" opacity="0.25"
                                           pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@image/apple_candy.png"/>
                                    </image>
                                </ImageView>
                                <Label fx:id="appleCandyQuantity" alignment="CENTER" layoutX="54.0" layoutY="54.0"
                                       minHeight="19.0" minWidth="19.0"
                                       style="-fx-border-color: black; -fx-border-radius: 5;" text="0">
                                    <font>
                                        <Font name="Carlito Bold" size="14.0"/>
                                    </font>
                                </Label>
                            </children>
                        </AnchorPane>
                    </children>
                </GridPane>
                <HBox alignment="CENTER" prefWidth="200.0" spacing="15.0">
                    <VBox.margin>
                        <Insets left="15.0"/>
                    </VBox.margin>
                    <children>
                        <Label fx:id="coinQuantity" text="0">
                            <font>
                                <Font name="Carlito Bold" size="30.0"/>
                            </font>
                        </Label>
                        <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@image/coins.png"/>
                            </image>
                        </ImageView>
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</HBox>
